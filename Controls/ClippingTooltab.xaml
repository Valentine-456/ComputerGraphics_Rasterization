<UserControl x:Class="ComputerGraphics_Rasterization.Controls.ClippingTooltab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="10">
        <TextBlock Text="Clipping Tool" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
        <TextBlock Text="Select subject polygon and clipping polygon or rectangle." Margin="0,0,0,10"/>

        <Button Content="Clip To" x:Name="ClipToButton" Width="100" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
