<UserControl x:Class="ComputerGraphics_Rasterization.Controls.FillingTooltab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <StackPanel Margin="10">
        <TextBlock Text="Filling Tool" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
        <TextBlock Text="Select a fill color and click inside a shape." Margin="0,0,0,10"/>
        <xctk:ColorPicker x:Name="FillColorPicker" SelectedColor="White" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>

